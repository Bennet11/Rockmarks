<div class="container">
  <h1 class="title"> <%= @topic.title %> </h1><br />
      <%= link_to "Add a Bookmark", new_topic_bookmark_path(@topic, @bookmark), class: 'btn btn-success' %>
      <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-primary' %>
    <div class="pull-right">
      <%= link_to "Delete Topic", @topic,
      method: :delete, class: 'btn btn-danger',
      data: { confirm: "Do you want to delete this topic?" } %>
    </div>

  <% @topic.bookmarks.each do |bookmark, url| %>
  <div class="col-md-4">
    <div class="media">
      <div class="media-body">
        <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark), class: 'embedly-card' %>
      </div>
    </div>
  </div>
  <% end %>
</div>
